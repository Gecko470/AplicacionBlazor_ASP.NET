@inject IJSRuntime ijsRuntime
<!-- Modal -->
<div class="modal fade" id="@idPopUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@tituloPopUp</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id=@idBtnCerrar>Cancelar</button>
                @*<button type="button" class="btn btn-primary" ">Aceptar</button>*@
                <input type="submit" value="Reservar" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string idBtnCerrar { get; set; } = "btn-close";

    [Parameter]
    public string idPopUp { get; set; } = "exampleModal";

    [Parameter]
    public string tituloPopUp { get; set; } = "";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public void Cerrar()
    {
        ijsRuntime.InvokeVoidAsync("cerrarPopUpId", idBtnCerrar);
    }
}

